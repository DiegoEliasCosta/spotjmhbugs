<?xml version="1.0" encoding="UTF-8"?>
<FindbugsPlugin xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="findbugsplugin.xsd"
	pluginid="de.heidelberg.pvs.diego.performance-tests-checker">

	<Detector class="de.heidelberg.pvs.diego.detectors.IgnoredMethodReturnDetector"
		reports="JMH_IGNORED_METHOD_RETURN" speed="fast" />

	<Detector class="de.heidelberg.pvs.diego.detectors.StateFinalFieldDetector"
		reports="JMH_STATE_FINAL_FIELD" speed="fast" />
		
	<Detector class="de.heidelberg.pvs.diego.detectors.LoopInsideBenchmarkDetector"
		reports="JMH_LOOP_INSIDE_BENCHMARK" speed="fast" />
		
	<Detector class="de.heidelberg.pvs.diego.detectors.UnforkedBenchmarkDetector"
		reports="JMH_UNFORKED_BENCHMARK" speed="fast" />

	<!-- JMH CORRECNESS BUGS -->
	<BugPattern type="JMH_IGNORED_METHOD_RETURN" category="CORRECTNESS" />
	<BugPattern type="JMH_STATE_FINAL_FIELD" category="CORRECTNESS" />
	
	
	<!-- JMH BEST PRACTICES BUGS -->
	<BugPattern type="JMH_LOOP_INSIDE_BENCHMARK" category="BEST_PRACTICES" />
	<BugPattern type="JMH_UNFORKED_BENCHMARK" category="BEST_PRACTICES" />
	
	

</FindbugsPlugin>
